<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout" />

    <GridLayout
        android:layout_width="270dp"
        android:layout_height="400dp"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="1"
            android:id="@+id/btn1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="2"
            android:id="@+id/btn2"
            android:layout_alignTop="@+id/btn1"
            android:layout_toRightOf="@+id/btn1"
            android:layout_toEndOf="@+id/btn1"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="3"
            android:id="@+id/btn3"
            android:layout_alignBottom="@+id/btn2"
            android:layout_toRightOf="@+id/btn2"
            android:layout_toEndOf="@+id/btn2"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="4"
            android:id="@+id/btn4"
            android:layout_below="@+id/btn1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="5"
            android:id="@+id/btn5"
            android:layout_alignBottom="@+id/btn4"
            android:layout_toRightOf="@+id/btn4"
            android:layout_toEndOf="@+id/btn4"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="6"
            android:id="@+id/btn6"
            android:layout_alignBottom="@+id/btn5"
            android:layout_toRightOf="@+id/btn5"
            android:layout_toEndOf="@+id/btn5"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="7"
            android:id="@+id/btn7"
            android:layout_below="@+id/btn4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="8"
            android:id="@+id/btn8"
            android:layout_alignBottom="@+id/btn7"
            android:layout_toRightOf="@+id/btn7"
            android:layout_toEndOf="@+id/btn7"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="9"
            android:id="@+id/btn9"
            android:layout_alignBottom="@+id/btn8"
            android:layout_alignLeft="@+id/btn6"
            android:layout_alignStart="@+id/btn6"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="0"
            android:id="@+id/btn0"
            android:layout_below="@+id/btn8"
            android:layout_toLeftOf="@+id/btn9"
            android:layout_toStartOf="@+id/btn9"
            android:layout_row="3"
            android:layout_column="1" />

    </GridLayout>

</RelativeLayout>
